<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamPl.ViewDos">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Biemvenido Estudiante" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>
            <Grid>

                <Image Source="uisrael.jpg" WidthRequest="150" HeightRequest="150"/>

            </Grid>
            <Entry x:Name="txtusuario" Placeholder="Ingrese su Usuario"/>
            <Entry x:Name="txtcontraseña" Placeholder="Ingrese su Contraseña" IsPassword="True"/>
            <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>
            <Label Text="" x:Name="lblMensaje" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>